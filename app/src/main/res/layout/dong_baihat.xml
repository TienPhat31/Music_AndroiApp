<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewHinhBaiHat"
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textViewTenBaiHat"
        android:text="Tên bài hat"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/imageViewHinhBaiHat"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewTenCaSiBaiHat"
        android:text="Ca Si"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/imageViewHinhBaiHat"
        android:layout_below="@+id/textViewTenBaiHat"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageViewLuotThich"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8sp"
        android:src="@drawable/iconlove" />



</RelativeLayout>