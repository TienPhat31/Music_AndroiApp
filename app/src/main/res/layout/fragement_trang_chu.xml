<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:name="tdtu.appnhac.Fragment.Fragment_Banner"
            android:id="@+id/fragment_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:name="tdtu.appnhac.Fragment.Fragment_Playlist"
            android:id="@+id/fragment_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:name="tdtu.appnhac.Fragment.Fragment_ChuDe_TheLoai"
            android:id="@+id/fragment_chude_theloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:name="tdtu.appnhac.Fragment.Fragment_Album"
            android:id="@+id/fragment_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:name="tdtu.appnhac.Fragment.Fragment_BaiHat"
            android:id="@+id/fragment_baihat_yeuthichnhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>